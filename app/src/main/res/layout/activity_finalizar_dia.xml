<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christian.sifacmovil.FinalizarDiaActivity">
    <EditText
        android:id="@+id/etNombreUsuarioFinalizarDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/MensajeNombreUsuario"
        android:layout_below="@+id/tvLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/etContraseñaFinalizarDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/MensajeContraseña"
        android:inputType="textPassword"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/etNombreUsuarioFinalizarDia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/btfinalizardia"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:drawableLeft="@drawable/ic_present_to_all_white_18dp"
        android:backgroundTint="@color/colorButton"
        android:text="Finalizar dia"
        android:textColor="@android:color/white"
        android:layout_below="@+id/etContraseñaFinalizarDia"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
