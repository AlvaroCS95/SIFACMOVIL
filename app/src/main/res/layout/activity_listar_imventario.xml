<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.christian.sifacmovil.ListarImventarioActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/TextoListaInventario"
        android:text="@string/TextoListainventario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/ActualizarInventario"
        android:backgroundTint="@color/colorButton"
        android:drawableLeft="@android:drawable/stat_notify_sync"
        android:textColor="@android:color/white"
        android:text="@string/ActualizarInventario"
        android:layout_below="@+id/TextoListaInventario"
        android:layout_alignLeft="@+id/TextoListaInventario"
        android:layout_alignStart="@+id/TextoListaInventario" />

    <ListView
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_below="@+id/ActualizarInventario"
        android:id="@+id/ListaInventario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
