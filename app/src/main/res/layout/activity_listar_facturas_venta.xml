<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.christian.sifacmovil.ListarFacturasVentaActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/TextoListaFacturaVEnta"
        android:text="@string/TextoListaFacturaVEnta"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/ActualizarFacturas"
        android:background="@color/colorButton"
        android:textColor="@android:color/white"
        android:text="@string/ActualizarFacturaVEnta"
        android:layout_below="@+id/TextoListaFacturaVEnta"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_below="@+id/ActualizarFacturas"
        android:id="@+id/ListaFacturasVenta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
